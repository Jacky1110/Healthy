    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/layout_scan_qrcode"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="50dp"
                android:alpha="0.8"
                android:background="@drawable/button_rectangle_green"
                app:layout_constraintBottom_toTopOf="@+id/view6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_scan"
                android:layout_width="@dimen/account_main_user_photo_height"
                android:layout_height="@dimen/account_main_user_photo_width"
                android:layout_marginBottom="32dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_qrcode00"
                android:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/layout_scan_qrcode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_scan_qrcode" />

            <TextView
                android:id="@+id/txt_memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="@string/scan_pay"
                android:textColor="@color/black"
                android:textSize="@dimen/scan_barcode_pay_textsize"
                app:layout_constraintBottom_toBottomOf="@+id/layout_scan_qrcode"
                app:layout_constraintEnd_toEndOf="@+id/img_scan"
                app:layout_constraintStart_toStartOf="@+id/img_scan"
                app:layout_constraintTop_toBottomOf="@+id/img_scan" />

            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:alpha="0.6"
                android:background="@drawable/button_rectangle_gray"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/iv_banner"
                app:layout_constraintEnd_toEndOf="@+id/layout_scan_qrcode"
                app:layout_constraintStart_toStartOf="@+id/layout_scan_qrcode" />

            <TextView
                android:id="@+id/tv_point_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/account_listitem_point"
                android:textColor="@color/black"
                android:textSize="@dimen/home_points_textsize"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/view6"
                app:layout_constraintEnd_toStartOf="@+id/guideline_point_center"
                app:layout_constraintStart_toStartOf="@+id/layout_scan_qrcode"
                app:layout_constraintTop_toTopOf="@+id/view6" />

            <TextView
                android:id="@+id/tv_point_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="@dimen/home_points_textsize"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/iv_point"
                app:layout_constraintEnd_toEndOf="@+id/layout_scan_qrcode"
                app:layout_constraintTop_toTopOf="@+id/iv_point" />

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:scaleType="center"
                android:src="@drawable/icon_point001"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_point_label"
                app:layout_constraintEnd_toStartOf="@+id/tv_point_value"
                app:layout_constraintTop_toTopOf="@+id/tv_point_label" />

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_marginBottom="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/_logo_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>