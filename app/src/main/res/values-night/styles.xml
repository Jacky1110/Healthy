<resources>

    <style name="Widget.Theme.Healthy.MyView" parent="">
        <item name="android:background">@color/gray_600</item>
        <item name="ewlLabelColor">@color/txtcolor</item>
    </style>

    <style name="Fragment_Account" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/fragment_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/fragment_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/fragment_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/fragment_vertical_padding</item>
        <item name="android:background">@drawable/background_gradient_main</item>
    </style>

    <style name="Fragment_Title_TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/fragment_account_title_top_margin</item>
        <item name="android:textSize">@dimen/fragment_account_title_textsize</item>
    </style>

    <style name="EditWithLabelView_Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/editwithlabel_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/editwithlabel_internal_offset_vertical</item>
        <item name="android:textColor">@color/txtcolor</item>
        <item name="android:textSize">@dimen/editwithlabel_label_textsize</item>
    </style>

    <style name="EditWithLabelView_Data" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginStart">@dimen/editwithlabel_data_margin_start</item>
        <item name="android:paddingTop">@dimen/editwithlabel_data_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/editwithlabel_data_padding_vertical</item>
        <item name="android:textSize">@dimen/editwithlabel_data_textsize</item>
        <item name="android:textColor">@color/gray_20</item>
        <item name="android:textColorHint">@color/gray_60</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>